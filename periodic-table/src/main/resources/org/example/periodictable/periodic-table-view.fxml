<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>


<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="org.example.periodictable.PeriodicTableApplication">
  <children>
    <GridPane fx:id="periodicGrid" alignment="BOTTOM_LEFT" hgap="5" minHeight="300.0"
      style="-fx-background-color: #f0f0f0;" vgap="5">
      <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>

      <!-- Hydrogen (Atomic #1: row 0, col 0) -->
      <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0">
        <children>
          <Rectangle arcHeight="8.0" arcWidth="8.0" fill="#FFFFFF" height="50.0" stroke="BLACK"
            strokeType="OUTSIDE" width="60.0" />
          <Label style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 16px;" text="H"
            translateY="-12.0" />
          <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Hydrogen"
            GridPane.rowIndex="1" />
        </children>
      </StackPane>

      <!-- Helium (Atomic #2: row 0, col 17) -->
      <StackPane GridPane.columnIndex="17" GridPane.rowIndex="0">
        <children>
          <Rectangle arcHeight="8.0" arcWidth="8.0" fill="#D9FFFF" height="50.0" stroke="BLACK"
            strokeType="OUTSIDE" width="60.0" />
          <Label style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 16px;" text="He"
            translateY="-12.0" />
          <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Helium"
            GridPane.rowIndex="1" />
        </children>
      </StackPane>

      <!-- Lithium (Atomic #3: row 1, col 0) -->
      <StackPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <children>
          <Rectangle arcHeight="8.0" arcWidth="8.0" fill="#CC80FF" height="50.0" stroke="BLACK"
            strokeType="OUTSIDE" width="60.0" />
          <Label style="-fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 16px;" text="Li"
            translateY="-12.0" />
          <Label style="-fx-font-size: 10px; -fx-text-fill: white;" text="Lithium"
            GridPane.rowIndex="1" />
        </children>
      </StackPane>

      <!-- Beryllium (Atomic #4: row 1, col 1) -->
      <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1">
        <children>
          <Rectangle arcHeight="8.0" arcWidth="8.0" fill="#C2FF00" height="50.0" stroke="BLACK"
            strokeType="OUTSIDE" width="60.0" />
          <Label style="-fx-font-weight: bold; -fx-text-fill: black; -fx-font-size: 16px;" text="Be"
            translateY="-12.0" />
          <Label style="-fx-font-size: 10px; -fx-text-fill: black;" text="Beryllium"
            GridPane.rowIndex="1" />
        </children>
      </StackPane>
      <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints />
        <RowConstraints />
      </rowConstraints>
    </GridPane>
  </children>
</VBox>